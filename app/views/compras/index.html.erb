<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table>
  <thead>
    <tr>
      <th>Numero tarjeta</th>
      <th>Nombre titular</th>
      <th>Fecha de vencimiento tarjeta</th>
      <th>Codigo seguridad</th>
      <th>Numero cuotas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.Numero_tarjeta %></td>
        <td><%= compra.Nombre_titular %></td>
        <td><%= compra.Fecha_de_vencimiento_tarjeta %></td>
        <td><%= compra.Codigo_seguridad %></td>
        <td><%= compra.Numero_cuotas %></td>
        <td><%= link_to 'Show', compra %></td>
        <td><%= link_to 'Edit', edit_compra_path(compra) %></td>
        <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

